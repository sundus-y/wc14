<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :round %>
    <%= f.number_field :round, in: 0..6 %>
  </div>
  <div class="field">
    <%= f.label :group %>
    <%= f.text_field :group %>
  </div>
  <div class="field">
    <%= f.label :game_date %>
    <%= f.date_field :game_date %>
  </div>
  <div class="field">
    <%= f.label :game_time %>
    <%= f.time_field :game_time %>
  </div>
  <div class="field float_left">
    <%= f.label :team_a %>
    <%= f.select :team_a, Game.bracket_team_picker.map(&:team_a)%>
  </div>
  <div class="field float_right">
    <%= f.label :goal_a%>
    <%= f.number_field :goal_a, min: 0 %>
  </div>
  <div class="clear"></div>
  <div class="field float_left">
    <%= f.label :team_b %>
    <%= f.select :team_b, Game.bracket_team_picker.map(&:team_a)%>
  </div>
  <div class="field float_right">
    <%= f.label :goal_b, class:'inline_label' %>
    <%= f.number_field :goal_b, min: 0 %>
  </div>
  <div class="clear"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
